<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        style="@style/titleText"
        android:text="Lights"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.lk.benoreno.ControlView.TextSpinnerComboView
                android:id="@+id/spLights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.example.lk.benoreno.ControlView.TextSpinnerComboView
                android:id="@+id/spLogoLights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.lk.benoreno.ControlView.TextSpinnerComboView>

            <com.example.lk.benoreno.ControlView.TextSpinnerComboView
                android:id="@+id/spAutoLightsMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.lk.benoreno.ControlView.TextSpinnerComboView>

            <com.example.lk.benoreno.ControlView.TextSpinnerComboView
                android:id="@+id/spAutoLightsTimeOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.lk.benoreno.ControlView.TextSpinnerComboView>

            <com.example.lk.benoreno.ControlView.TextSpinnerComboView
                android:id="@+id/spAutoLightsTimeOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.lk.benoreno.ControlView.TextSpinnerComboView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>